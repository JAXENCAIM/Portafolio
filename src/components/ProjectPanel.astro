---
interface Props {
	title: string;
	type: string;
	description: string;
	tags: string[];
	role: string;
}

const { title, type, description, tags, role } = Astro.props;
---

<section class="panel bg-bg-deep border-l border-neutral-900 flex flex-col justify-center items-start">
	<div class="max-w-4xl space-y-8">
		<div class="space-y-2">
			<p class="text-[10px] font-mono uppercase tracking-[0.4em] text-accent-yellow mb-4">
				{type} // Project
			</p>
			<h3 class="text-6xl md:text-9xl font-bold leading-tight">
				{title}<span class="text-accent-yellow">.</span>
			</h3>
		</div>

		<p class="text-xl md:text-2xl text-neutral-400 font-light max-w-2xl leading-relaxed">
			{description}
		</p>

		<div class="flex flex-wrap gap-4 pt-4">
			{tags.map(tag => (
				<span class="px-4 py-2 border border-neutral-800 text-[10px] font-mono text-neutral-500 uppercase tracking-widest hover:border-accent-yellow hover:text-accent-yellow transition-colors">
					{tag}
				</span>
			))}
		</div>

		<div class="pt-8 border-t border-neutral-900 w-full flex items-center justify-between">
			<span class="text-xs font-mono text-neutral-600 uppercase tracking-widest">Role: {role}</span>
			<a href="#" class="text-xs font-mono text-accent-yellow uppercase tracking-widest hover:translate-x-2 transition-transform inline-flex items-center gap-2">
				View Case Study 
				<svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M5 12h14M12 5l7 7-7 7"/>
				</svg>
			</a>
		</div>
	</div>
</section>
