---
import { Image } from 'astro:assets';
import portrait from '../assets/ImagenPerfilJamin.png';
---
<section class="panel bg-bg-deep flex flex-col justify-center items-start relative z-10" id="hero-section">
  <canvas id="hero-canvas" class="absolute inset-0 w-full h-full -z-10 opacity-40"></canvas>
  
  <div class="flex flex-col lg:flex-row items-center justify-between w-full gap-12">
    <div class="space-y-4 relative z-20">
      <div class="overflow-hidden">
        <h1 class="text-[clamp(4rem,12vw,10rem)] leading-[0.85] uppercase tracking-tighter" id="hero-name">
          <span class="inline-block overflow-hidden h-full">
            <span class="letter inline-block">J</span>
            <span class="letter inline-block">a</span>
            <span class="letter inline-block">m</span>
            <span class="letter inline-block">i</span>
            <span class="letter inline-block">n</span>
          </span>
          <br/>
          <span class="inline-block overflow-hidden h-full">
            <span class="letter inline-block">Y</span>
            <span class="letter inline-block">a</span>
            <span class="letter inline-block">u</span>
            <span class="letter inline-block">r</span>
            <span class="letter inline-block">i</span>
            <span class="letter inline-block text-accent-yellow">.</span>
          </span>
        </h1>
      </div>
      
      <div class="overflow-hidden">
        <p class="text-xl md:text-3xl font-light text-accent-yellow uppercase tracking-[0.2em] text-reveal-item" id="hero-title">
          Mechatronics Engineer / Robotics & AI
        </p>
      </div>
    </div>

    <!-- Portrait Integration -->
    <div class="relative group lg:mr-24" id="hero-portrait-container">
      <div class="absolute inset-0 bg-accent-yellow scale-95 blur-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-700"></div>
      <Image 
        src={portrait} 
        alt="Jamin Yauri Portrait" 
        class="relative z-10 w-[300px] md:w-[450px] lg:w-[550px] grayscale contrast-125 brightness-90 group-hover:grayscale-0 group-hover:brightness-100 transition-all duration-700"
        id="hero-portrait"
      />
      <!-- Brutalist Frame -->
      <div class="absolute -inset-4 border border-accent-yellow/30 -z-10 translate-x-4 translate-y-4"></div>
    </div>
  </div>

  <div class="absolute bottom-12 left-12 md:left-24">
    <p class="text-xs font-mono uppercase tracking-widest text-neutral-500 animate-pulse">
      Scroll to Navigate // [V-01]
    </p>
  </div>
</section>

<script>
  import { gsap } from 'gsap';

  // --- ASCII/Matrix Grid Effect ---
  const initCanvas = () => {
    const canvas = document.getElementById('hero-canvas') as HTMLCanvasElement;
    if (!canvas) return;
    const ctx = canvas.getContext('2d')!;

    let width = canvas.width = window.innerWidth;
    let height = canvas.height = window.innerHeight;

    const chars = "01".split("");
    const fontSize = 24; 
    const columns = width / fontSize;
    const drops: number[] = [];

    for (let x = 0; x < columns; x++) drops[x] = 1;

    let mouse = { x: 0, y: 0 };
    window.addEventListener('mousemove', (e) => {
      mouse.x = e.clientX;
      mouse.y = e.clientY;
    });

    const draw = () => {
      ctx.fillStyle = "rgba(5, 5, 5, 0.15)"; 
      ctx.fillRect(0, 0, width, height);

      ctx.font = `900 ${fontSize}px monospace`; 

      for (let i = 0; i < drops.length; i++) {
        const text = chars[Math.floor(Math.random() * chars.length)];
        const x = i * fontSize;
        const y = drops[i] * fontSize;

        const dx = mouse.x - x;
        const dy = mouse.y - y;
        const dist = Math.sqrt(dx*dx + dy*dy);
        
        if (dist < 200) {
          ctx.shadowBlur = 15;
          ctx.shadowColor = "#FFD700";
          ctx.fillStyle = "#FFD700";
        } else {
          ctx.shadowBlur = 0;
          ctx.fillStyle = "rgba(255, 255, 255, 0.45)";
        }
        
        ctx.fillText(text, x, y);
        ctx.shadowBlur = 0;

        if (y > height && Math.random() > 0.975) drops[i] = 0;
        drops[i]++;
      }
    };

    const interval = setInterval(draw, 33);
    
    window.addEventListener('resize', () => {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
    });

    return () => clearInterval(interval);
  };

  // --- Letter by Letter Animation ---
  const initReveal = () => {
    const tl = gsap.timeline({ defaults: { ease: "expo.out" } });

    tl.from(".letter", {
      yPercent: 100,
      opacity: 0,
      duration: 1.2,
      stagger: 0.05,
    })
    .from("#hero-portrait-container", {
      opacity: 0,
      scale: 0.8,
      x: 50,
      duration: 1.5,
      ease: "power4.out"
    }, "-=1")
    .from("#hero-title", {
      opacity: 0,
      y: 20,
      duration: 1,
    }, "-=1.2");
  };

  // --- Mouse Parallax Effect ---
  const initMouseEffect = () => {
    const hero = document.getElementById('hero-section');
    if (!hero) return;

    hero.addEventListener('mousemove', (e) => {
      const { clientX, clientY } = e;
      const { width, height } = hero.getBoundingClientRect();
      
      const x = (clientX - width / 2) / (width / 2);
      const y = (clientY - height / 2) / (height / 2);

      gsap.to("#hero-name", {
        x: x * 20,
        y: y * 20,
        rotateY: x * 5,
        rotateX: -y * 5,
        duration: 0.8,
        ease: "power2.out"
      });

      gsap.to("#hero-title", {
        x: x * 30,
        y: y * 30,
        duration: 0.8,
        ease: "power2.out"
      });

      gsap.to("#hero-portrait", {
        x: -x * 40, // Inverse movement for depth
        y: -y * 40,
        rotateY: -x * 10,
        rotateX: y * 10,
        duration: 1,
        ease: "power2.out"
      });
    });
  };

  initCanvas();
  initReveal();
  initMouseEffect();
</script>
